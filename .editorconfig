root=true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.sh]
end_of_line = lf
charset = latin1

[*.conf]
end_of_line = lf
charset = latin1

[*.env*]
end_of_line = lf
charset = latin1
